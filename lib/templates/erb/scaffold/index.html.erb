<div class="page-header">
  <%%= link_to new_<%= singular_table_name %>_path, class: 'btn btn-sm btn-primary' do %>
    <%%= fa_icon "plus", text: "Nuevo <%= human_name %>" %>
  <%% end %>
  <h4>Listado de <%= plural_table_name %></h4>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    <% attributes.each do |attribute| -%>
        <th><%= attribute.human_name %></th>
    <% end -%>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name%>.each do |<%= singular_table_name %>| %>
        <%%= content_tag :tr, id: dom_id(<%= singular_table_name %>), class: dom_class(<%= singular_table_name %>) do %>
          <% attributes.each do |attribute| -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>
          <td class="col-md-2 text-center">
            <%%= link_to <%= singular_table_name %>, class: 'btn btn-sm btn-default' do %>
              <%%= fa_icon "search" %>
            <%% end %>
            <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-sm btn-default' do %>
              <%%= fa_icon "edit" %>
            <%% end %>
            <%%= link_to <%= singular_table_name %>, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
              <%%= fa_icon "trash" %>
            <%% end %>
          </td>
        <%% end %>
      <%% end %>
    </tbody>
  </table>
</div>
