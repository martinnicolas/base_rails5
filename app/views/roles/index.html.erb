<div class="page-header">
  <%= link_to new_role_path, class: 'btn btn-sm btn-primary' do %>
    <%= fa_icon "plus", text: "Nuevo Rol" %>
  <% end %>
  <h4>Listado de Roles</h4>
</div>
<ol class="breadcrumb">
  <li class="active">
    <%= fa_icon "user", text: "Roles" %>
  </li>
</ol>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Descripcion</th>
        <th>&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <%= content_tag :tr, id: dom_id(role), class: dom_class(role) do %>
          <td><%= role.descripcion %></td>
          <td class="col-md-2 text-center">
            <%= link_to role, class: 'btn btn-sm btn-default' do %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
            <%= link_to edit_role_path(role), class: 'btn btn-sm btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
            <%= link_to role, class: 'btn btn-sm btn-danger',method: :delete, data: { confirm: '¿Está seguro?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
